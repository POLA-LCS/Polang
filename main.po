mac Pair 3
    mac Pair.delete 1
        del $1.first $1.second Pair.delete
    end

    mac Pair.set_first 2
        set $1.first $2
        assign $1 0 $2
    end

    mac Pair.set_second 2
        set $1.second $2
        assign $1 1 $2
    end

    set $1.first $2
    set $1.second $3
    set $1 []
    add $1 $1.first $1.second
end

% "Declare" a pair
call Pair coord 18 36

out coord.first . coord.second
out

call Pair.set_first coord 24
call Pair.set_second coord 45

zet coord_sum sum coord.first coord.second

out coord_sum